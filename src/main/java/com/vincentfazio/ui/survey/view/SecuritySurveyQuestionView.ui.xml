<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
    xmlns:g="urn:import:com.google.gwt.user.client.ui" 
    xmlns:c="urn:import:com.google.gwt.user.cellview.client"
    xmlns:gwtv="urn:import:com.vincentfazio.ui.survey.view">

    <g:LayoutPanel addStyleNames="gwt-form-panel">
        <g:layer>
            <g:ScrollPanel>
                <g:HTMLPanel>
		            <g:HTMLPanel addStyleNames="gwt-right-header-div">
		                <h2>
		                    <g:Label ui:field="questionId"></g:Label>
		                </h2>
		                <div ui:field="saveDiv" class="gwt-right-save-div">
		                    <g:Button ui:field="saveButton" text="Save" title="Save changes" />
		                    <g:Anchor ui:field="undoButton" text="Cancel" title="Revert unsaved changes" />
		                </div>
		            </g:HTMLPanel>
	                <g:FlowPanel addStyleNames="gwt-form" ui:field="questionPanel">
	                </g:FlowPanel>
                </g:HTMLPanel>
            </g:ScrollPanel>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder> 