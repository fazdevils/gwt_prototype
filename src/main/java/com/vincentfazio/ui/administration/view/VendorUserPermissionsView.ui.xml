<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:d="urn:import:com.google.gwt.dom.client" xmlns:gwt="urn:import:com.vincentfazio.ui.view.component">

	<g:DockLayoutPanel unit="EM" addStyleNames="gwt-permissions-panel">
		<g:center>
			<g:ScrollPanel>
			    <g:HTMLPanel>
		            <g:HTMLPanel addStyleNames="gwt-right-header-div">
		                <h2>
		                    <g:Label ui:field="vendorRoleTitle" />
		                </h2>
                        <div ui:field="backDiv" class="gwt-right-save-div">
                            <g:Anchor ui:field="backButton" text="Back" title="Back to supplier details" addStyleNames="delete-button"/>
                        </div>
		                <div ui:field="saveDiv" class="gwt-right-save-div">
		                    <g:Button ui:field="saveButton" text="Save" title="Save changes" />
		                    <g:Anchor ui:field="undoButton" text="Cancel"
		                        title="Revert unsaved changes" />
		                </div>
		            </g:HTMLPanel>
				    <g:HTMLPanel addStyleNames="gwt-permissions">
						<div width="100%">
							<gwt:DataProviderSearchBox ui:field="userSearchBox" width="100%"></gwt:DataProviderSearchBox>
						</div>
						<div ui:field="vendorlistDiv">
							<c:CellTable pageSize="14" ui:field="userPermissions" width="100%" />
							<c:SimplePager ui:field="userPermissionsPager" />
						</div>
						<div ui:field="emptyVendorlistDiv">
							<g:Label text="The user list is empty." addStyleNames="gwt-empty-list" />
						</div>
	
                    </g:HTMLPanel>
                </g:HTMLPanel>
			</g:ScrollPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 