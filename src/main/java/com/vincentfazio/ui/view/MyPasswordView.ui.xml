<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
             xmlns:g="urn:import:com.google.gwt.user.client.ui" 
             xmlns:d="urn:import:com.google.gwt.dom.client"
             xmlns:gwt="urn:import:com.vincentfazio.ui.view.component">

    <g:DockLayoutPanel unit="EM" addStyleNames="gwt-form-panel">
        <g:north size="3">
            <g:HTMLPanel addStyleNames="gwt-right-header-div">
                <h2>
                    Change Password
                </h2>
                <div ui:field="saveDiv" class="gwt-right-save-div">
                    <g:Button ui:field="saveButton" text="Save" title="Change password"/>
                    <g:Anchor ui:field="undoButton" text="Cancel" title="Cancel changes"/>
                </div>
            </g:HTMLPanel>
        </g:north>
        <g:center>
            <g:ScrollPanel>
                <g:HTMLPanel addStyleNames="gwt-form">
                    <g:HTMLPanel>
                        <g:Label addStyleNames="gwt-form-group-label">Password:</g:Label>
                        <g:HTMLPanel addStyleNames="gwt-form-group-area">
                            <g:HTMLPanel addStyleNames="gwt-pwd-form-line">
                                <g:Label addStyleNames="gwt-form-label">Current Password:</g:Label>
                                <g:PasswordTextBox ui:field="currentPassword" addStyleNames="gwt-form-text"></g:PasswordTextBox>
                            </g:HTMLPanel>
                            <g:HTMLPanel addStyleNames="gwt-pwd-form-line">
                                <g:Label addStyleNames="gwt-form-label">New Password:</g:Label>
                                <g:PasswordTextBox ui:field="newPassword" addStyleNames="gwt-form-text"></g:PasswordTextBox>
                            </g:HTMLPanel>
                            <g:HTMLPanel addStyleNames="gwt-pwd-form-line">
                                <g:Label addStyleNames="gwt-form-label">Confirm New Password:</g:Label>
                                <g:PasswordTextBox ui:field="verifyPassword" addStyleNames="gwt-form-text"></g:PasswordTextBox>
                            </g:HTMLPanel>
                        </g:HTMLPanel>
                    </g:HTMLPanel>
               </g:HTMLPanel>        
           </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder> 